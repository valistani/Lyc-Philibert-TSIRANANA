{% extends 'base.html.twig'%}
{% block title "Gerer les années scolaires" %}
{% block body %}
    <div class="container mt-4">
        <h1>Gerer les Parents</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class=" text-right">
            <a href="{{ path('admin.scolaire.new') }}" class="btn btn-primary">Nouveaux</a>
        </div>
        </br>
        <table class="table table-striped">
            <thead>
            <tr>
                <!-- <th>ID</th>-->
                <th>Id</th>
                <th>Année Scolaire</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for scolaire in scolaires %}
                <tr>
                    <td>{{ scolaire.id }}</td>
                    <td>{{ scolaire.anneeScolaire }}</td>
                    <td>
                        <!--<a href="{#{ path('admin.scolaire.show', {'id': scolaire.id}) }#}">show</a>-->
                        <a href="{{ path('admin.scolaire.edit', {'id': scolaire.id}) }}" class="btn btn-secondary">Editer</a>
                        <form method="POST" action="{{ path('admin.scolaire.delete',{id: scolaire.id}) }}" style="display: inline-block;" onsubmit="return confirm('Etes vous vraiment sur de supprimer cet information?  {{ scolaire.anneeScolaire }}')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ scolaire.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de resultats</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!--<div class="pagination">
            {# { knp_pagination_render(etudiants) }#}
        </div>-->
    </div>
{% endblock %}