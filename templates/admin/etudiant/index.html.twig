{% extends 'base.html.twig'%}
{% block title "Gerer l'etudiant de l'ISSTM" %}
{% block body %}
    <div class="container mt-4">
        <h1>Gerer l' etudiant</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="jumbotron" style="height:10px;width: 80%;">
            <div class="container" style="margin-top: -45px;">
                {{ form_start(form) }}
                    <div class="form-row align-items-end">
                        <div class="col">
                            {{ form_row(form.nomS) }}
                        </div>
                        <!--<div class="col">
                            {#{ form_row(form.prenomS) }#}
                        </div>-->
                        <div class="col">
                            {{ form_row(form.sexeS) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.nationaliteS) }}
                        </div>
                        <!--<div class="col">
                            {#{ form_row(form.parain) }#}
                        </div>-->
                        <div class="col">
                            <div class="form-group">
                                <button class="btn btn-success">Rechercher</button>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="text-right" style="margin-top: -9.5%;padding-bottom: 5%;height: 20%;"><a href="{{ path('admin.parain.new') }}" class="btn btn-primary" >Nouveaux étudiant</a></div>
        <table class="table table-striped">
            <thead>
            <tr>
                <!--<th>ID</th>-->
                <th>Photo</th>
                <th>Nom et Prénom(s)</th>
                <th>Date et lieu de naissance</th>
                <th>Sexe</th>
                <th>Nationalité</th>
                <th>Action(s)</th>
            </tr>
            </thead>
            <tbody>
            {% for etudiant in etudiants %}
                <tr>
                    <!--<td>{# { etudiant.getId() }#}</td>-->
                    <td>
                        {% if etudiant.filename %}
                            <!--<img src="/images/etudiants/{{ etudiant.filename }}" alt="card-img-top" style="width: 100%;height: auto;">-->
                            <a href="{{ path('etudiant.show',{slug:etudiant.slug,id:etudiant.id}) }}"><img src="{{ vich_uploader_asset(etudiant, 'imageFile') | imagine_filter('tiny') }}" alt="card-img-top" style="width: 100%;height: auto;border-radius: 20px;"></a>
                        {% else %}
                            <a href="{{ path('etudiant.show',{slug:etudiant.slug,id:etudiant.id}) }}"><img src="{{'images/properties/empty.jpg' | imagine_filter('tiny')}}" alt="card-img-top" style="weight:100%;height: auto;border-radius: 20px;"></a>
                        {% endif %}
                    </td>
                    <td>{{ etudiant.getNomE()  }}  {{ etudiant.getPrenomE()  }}</td>
                    <td>{{ etudiant.formatDtStr  }} à {{ etudiant.lieuNaissanceE   }}</td>
                    <td>{{ etudiant.sexeType  }}</td>
                    <td>{{ etudiant.getNationaliteE()  }}</td>
                    <td>
                        <a href="{{ path('etudiant.show',{id: etudiant.id, slug: etudiant.slug})}}" class="btn btn-warning">Profil</a>
                        <a href="{{path('admin.etudiant.edit',{id: etudiant.id})}}" class="btn btn-secondary">Editer</a>
                        <form method="POST" action="{{ path('admin.etudiant.delete',{id: etudiant.id}) }}" style="display: inline-block;" onsubmit="return confirm('Etes vous vraiment sur de supprimer cet information?Mr/Mle:{{ etudiant.getPrenomE() }}')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etudiant.id) }}">
                            <button class="btn btn-danger">Suppra</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination">
            {{ knp_pagination_render(etudiants) }}
        </div>
    </div>
{% endblock %}